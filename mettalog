    for pl_file in "$INTERP_SRC_DIR"/*_*.*; do
	if [[ ! -e "$pl_file" ]]; then
	    DEBUG "{ORANGE}No matching .pl files found in $INTERP_SRC_DIR."
	# If a .pl file is newer than the skip_compile file, delete the skip_compile
	elif [[ "$pl_file" -nt "$INTERP_SRC_DIR/skip_compile" ]]; then
	    DEBUG "${ORANGE}$pl_file is newer than $INTERP_SRC_DIR/skip_compile."
	    rm -f "$INTERP_SRC_DIR/skip_compile"
	    break  # Exit loop early as skip_compile is deleted
	fi
    done
fi

if [[ " $* " == *" --douglas "* ]]; then
    ADD_COMPILE_ARG+="--douglas"
fi

if [[ "$exe" == "force" ]]; then
    exe=true
    rm -f "$INTERP_SRC_DIR/skip_compile"
    need_compile=1
fi

if [[ "$exe" == "true" ]]; then
    # Find the most recent reference file based on modification time
    reference_file=$(find "$INTERP_SRC_DIR" -maxdepth 1 -type f -name "${DefaultSav}*" -not -name "*.*" -printf "%T@ %p\n" | sort -k1,1nr | head -n 1 | cut -f2- -d" ")

    # If no reference file is found, set a default one
    if [[ -z "$reference_file" ]]; then      
        reference_file="$INTERP_SRC_DIR/${DefaultSav}"
        DEBUG "Setting exe based on $reference_file"	
    fi

    # If the reference file does not exist, compilation is required
    if [[ ! -e "$reference_file" ]]; then
        DEBUG "${ORANGE}Reference file $reference_file does not exist. Compiler will be called."
        need_compile=1
    else
        # Check if any .pl file is newer than the reference file
        for pl_file in "$INTERP_SRC_DIR"/*_*.*; do
            if [[ ! -e "$pl_file" ]]; then
                DEBUG "{ORANGE}No matching .pl files found in $INTERP_SRC_DIR."
            # If a .pl file is newer than the reference file, trigger recompilation
            elif [[ "$pl_file" -nt "$reference_file" ]]; then
                DEBUG "${ORANGE}$pl_file is newer than $reference_file."
                need_compile=1
                break  # Exit loop early as compilation is already needed
            fi
        done
    fi
fi




if [[ -f "$INTERP_SRC_DIR/skip_compile" ]]; then
 exe=false
 need_compile=0
 STYLE=INTERP
fi

if [[ $need_compile -eq 1 ]]; then

    if [[ -f "$reference_file" ]]; then
        # was "should" (therefore requested)
