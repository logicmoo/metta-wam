# Function to cleanup compiled file if execution is interrupted or unsuccessful
compiler_cleanup() {
    if [[ $NEED_CLEANUP -eq 1 ]]; then
	NEED_CLEANUP=0

	# If the success file is missing, remove the binary

	if [[ -f "$reference_file" && -f "$METTALOG_COMPILE_SUCCESS" ]]; then
	    rm -f "$METTALOG_COMPILE_SUCCESS"
	    DEBUG "{$GREEN}CREATED $reference_file"
	    STYLE=EXE
	else
	    
	    
	    do_DEBUG "${ORANGE}Missing $reference_file OR $METTALOG_COMPILE_SUCCESS!${NC}"
	    
	    DEFSAVE="$INTERP_SRC_DIR/${DefaultSav}"

	    # Ensure DEFSAVE is not empty and does not point to a directory
	    if [[ -n "$DEFSAVE" && ! -d "$DEFSAVE" ]]; then
		do_DEBUG "${YELLOW}Checking for failed compilation files to remove...${NC}"
		
		# Find and remove only relevant files
		for file in "$DEFSAVE"*; do
		    if [[ -f "$file" ]]; then
			do_DEBUG "${YELLOW}Removing: $file${NC}"
			rm -f "$file"
		    else
			do_DEBUG "${YELLOW}Skipping: $file (not a regular file)${NC}"
		    fi
		done
	    else
		do_DEBUG "${YELLOW}Skipping removal: $DEFSAVE is a directory or unset.${NC}"
	    fi

	    do_DEBUG "${RED}Fallback: Using interpreter instead of compiled image.${NC}"
	    touch "$INTERP_SRC_DIR/skip_compile"
	    unset reference_file
	    exe=false

	fi
    fi

}

if [[ $need_compile -eq 1 && "$exe" == "true" ]]; then

    NEED_CLEANUP=1
    # Register cleanup before starting compilation
    (

    # Set LC_ALL to UTF-8 to prevent encoding-related errors
    export LC_ALL=C.UTF-8  

    # Remove any previous success files (clean up before new compilation)
    rm -f "$TEMP_DIR/create_on_successful_compile_*"
    rm -f "$TEMP_DIR/metta_cache/??*"
    rm -f "$TEMP_DIR/tmp.??*"

    # Construct the compilation command    
    #--successfile=$METTALOG_COMPILE_SUCCESS
    MAKE_REF_FILE="swipl -l '$INTERP_SRC_DIR/metta_interp.pl' -g 'qcompile_mettalog.' --  ${ADD_COMPILE_ARG[*]} --exeout=$reference_file"
    DEBUG "MAKE_REF_FILE = $MAKE_REF_FILE"

    unset DISPLAY

    # Execute the compilation command
    set +e
    DEBUG "${BOLD}Compiling $reference_file..."
    eval "$MAKE_REF_FILE" 
    # trap reset_settings  compiler_cleanup SIGINT SIGTERM EXIT
    )
fi

# Maybe call cleanup function (It also checks if compilation was successfull and if not, it might toggle exe=false)
if [[ "$exe" == "true" ]]; then
    compiler_cleanup 
fi

# If exe is explicitly set to false, enforce the non-executable mode
if [[ "$exe" == "false" ]]; then
    unset reference_file
    #rm -f "$TEMP_DIR/metta_cache/??*"
    #rm -f "$TEMP_DIR/tmp.??*"
    STYLE=INTERP    
fi


if [[ " $* " == *" --compile-only "* ]]; then
    [[ "$IS_SOURCED" == "1" ]] && return 0 || exit 0
