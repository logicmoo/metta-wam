# ===========================================================
# MettaLog Prolog Interpreter Version and Path Configuration
# ===========================================================
# This script configures the version and source directory for the MettaLog Prolog interpreter,
# determines the appropriate version by checking a version-config file and any requested overrides,
# searches for the interpreter source across various directories, and updates paths based on the found source.
# It checks for 'unlikely' METTALOG_DIR locations such as the root or home directories.
# Variables:
# - REQUEST_PYSWIP_VERSION: Stores the requested version directory of the Prolog interpreter.
# - PYSWIP_VERSION: Stores the current version directory of the Prolog interpreter.
# - VERSION_FILE: Path to the file containing version configuration if not specified by user.
# - FIRST_LINE: The first line of the VERSION_FILE, used to determine version overrides.
# - METTALOG_DIR: if this is being run outside of the METTALOG_DIR, this will bring the search back inside if nothing is found.
# Variables Out:
# - INTERP_SRC_DIR: The resolved directory path where the Prolog interpreter source is located.
# - PYSWIP_VERSION: Shall become fully qualified non-relative INTERP_SRC_DIR.
# - METTALOG_DIR: Shall become fully qualified non-relative path two dirs below INTERP_SRC_DIR.
# ===========================================================
resolve_full_path() {
    local path="$1"
    if command -v greadlink > /dev/null; then
        greadlink -f "$path"
    elif command -v readlink > /dev/null; then
        readlink -f "$path" || echo "$(cd "$(dirname "$path")"; pwd -P)/$(basename "$path")"
    else
        echo "$(cd "$(dirname "$path")"; pwd -P)/$(basename "$path")"
    fi
}
# Initial Debugging
DEBUG "Starting interpreter configuration."
DEBUG "Requested PYSWIP_VERSION: ${REQUEST_PYSWIP_VERSION:-None specified}"
DEBUG "Initial METTALOG_DIR: ${METTALOG_DIR:-Not set}"

# Checking for a requested PYSWIP_VERSION
if [[ -n "$REQUEST_PYSWIP_VERSION" ]]; then
    PYSWIP_VERSION="$REQUEST_PYSWIP_VERSION"
    DEBUG "Using requested PYSWIP_VERSION: $PYSWIP_VERSION"
    unset INTERP_SRC_DIR
fi


if [[ -z "$INTERP_SRC_DIR" ]]; then

    # Checking the version file and setting PYSWIP_VERSION if no specific version requested
    if [[ -z "$PYSWIP_VERSION" ]]; then
    	VERSION_FILE="$METTALOG_DIR/version-config"
    	if [ -f "$VERSION_FILE" ]; then
    	    read -r FIRST_LINE < "$VERSION_FILE"
    	    FIRST_LINE="${FIRST_LINE%"${FIRST_LINE##*[![:space:]]}"}"  # Trim trailing whitespace
    	    if [[ -n "$FIRST_LINE" ]]; then
    		PYSWIP_VERSION="$FIRST_LINE"
    		DEBUG "Version from file: $PYSWIP_VERSION"
    	    else
    		DEBUG "No version override found in $VERSION_FILE"
    	    fi
    	else
    	    DEBUG "No version file found at $VERSION_FILE"
    	fi
    fi

    # Setting a default value for PYSWIP_VERSION if it has not been set
    if [[ -z "$PYSWIP_VERSION" ]]; then
    	PYSWIP_VERSION="prolog/metta_lang"  # Ensure this default path is correct based on your directory structure
    	DEBUG "No version specified, using default PYSWIP_VERSION: $PYSWIP_VERSION"
    fi

    PYSWIP_VERSION="${PYSWIP_VERSION%/}"
    paths=(
	"$PYSWIP_VERSION"
	"$PYSWIP_VERSION/prolog"
	"$PYSWIP_VERSION/src"
	"$PYSWIP_VERSION/prolog/metta_interp"
	"$METTALOG_DIR/$PYSWIP_VERSION"
	"$METTALOG_DIR/prolog/$PYSWIP_VERSION"
	"$METTALOG_DIR/src/$PYSWIP_VERSION"
	"$METTALOG_DIR/$PYSWIP_VERSION/prolog/metta_interp"
	".Attic/$PYSWIP_VERSION"
	"$METTALOG_DIR/.Attic/$PYSWIP_VERSION"
    )

    # Debugging path search
    DEBUG "Starting search for interpreter source."
    for path in "${paths[@]}"; do
	DEBUG "Checking path: $path"
	if [ -f "$path/metta_interp.pl" ]; then
	    DEBUG "Found interpreter at $path"
	    INTERP_SRC_DIR=$(resolve_full_path "$path")
	    PYSWIP_VERSION=$(resolve_full_path "$INTERP_SRC_DIR")
	    NEW_METTALOG_DIR=$(dirname "$(dirname "$PYSWIP_VERSION")")
	    
	    # Handling unlikely METTALOG_DIR locations with debug
	    if [[ "$NEW_METTALOG_DIR" == "/" || "$NEW_METTALOG_DIR" == "$HOME" || "$NEW_METTALOG_DIR" == "/home" || "$NEW_METTALOG_DIR" == "/usr" ]]; then
		DEBUG "Unlikely METTALOG_DIR detected at $NEW_METTALOG_DIR, not updating."
	    else
    		if [[ -z "$METTALOG_DIR" || "$METTALOG_DIR" != "$NEW_METTALOG_DIR" ]]; then
    		    DEBUG "Updating METTALOG_DIR from ${METTALOG_DIR:-unset} to $NEW_METTALOG_DIR"
    		    METTALOG_DIR="$NEW_METTALOG_DIR"
    		fi
	    fi
	    found=true
	    break
	fi
    done

    # Finalizing debug statements
    if [ "$found" = false ]; then
    	DEBUG "${RED}Error: Interpreter source directory not found after checking all paths.${NC}"
    	[[ "${BASH_SOURCE[0]}" != "$0" ]] && return 1 || exit 1
    fi

fi

DEBUG "Final INTERP_SRC_DIR: $INTERP_SRC_DIR"
DEBUG "Final METTALOG_DIR: $METTALOG_DIR"
export INTERP_SRC_DIR

# process specific RC file
if [[ -f "${use_rc_file}" ]]; then
   load_rc_file "${use_rc_file}"
fi

# Function to check if inside a virtual environment
check_venv() {
    if [ -z "$VIRTUAL_ENV" ]; then
        DEBUG -e "\033[1;33mWARNING: You are not inside a Python virtual environment!\033[0m"
        DEBUG -e "\033[1;33m         It's recommended to activate a venv before running this.\033[0m"
        DEBUG -e "\033[1;33m         Proceeding anyway...\033[0m\n"
        # Proceed with the expected commands
        cd "$METTALOG_DIR"
        source ./scripts/ensure_venv
        cd "$RPWD"
    fi
}

# Run the check before executing the commands
check_venv

